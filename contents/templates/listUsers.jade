div.row
    div.three.columns
        strong= "Name"
    div.three.columns
        strong= "Yelping since"
    div.two.columns
        strong= "Reviews submitted"
    div.one.column
    div.three.columns
        strong= "Average rating given"

each item in items   
    div.row
        div.three.columns
            a(href="#", onClick='viewUser("' + item.user_id + '")')
                = item.name
        div.three.columns
            = item.yelping_since
        div.three.columns
            = item.review_count
        div.three.columns
            = item.average_stars